{
  "name": "school-comm-system",
  "version": "3.0.0",
  "description": "Production-grade WhatsApp School Communication System for Nepal",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "npx prisma generate",
    "postinstall": "npx prisma generate",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write src/**/*.js",
    "worker": "node src/workers/messageWorker.js",
    "scheduler": "node src/workers/schedulerWorker.js",
    "migrate": "npx prisma migrate deploy",
    "migrate:create": "node scripts/migrate.js create",
    "migrate:reset": "node scripts/migrate.js reset",
    "db:generate": "npx prisma generate",
    "db:push": "npx prisma db push",
    "db:studio": "npx prisma studio",
    "backup:create": "node scripts/backup.js create",
    "backup:restore": "node scripts/backup.js restore",
    "backup:list": "node scripts/backup.js list",
    "backup:test": "node scripts/backup.js test",
    "deploy": "node scripts/deploy.js",
    "deploy:staging": "node scripts/deploy.js staging",
    "deploy:production": "node scripts/deploy.js production",
    "deploy:render": "node scripts/render-deploy.js",
    "deploy:check": "node scripts/deploy-check.js",
    "monitor:check": "node scripts/monitoring.js check",
    "monitor:start": "node scripts/monitoring.js monitor",
    "setup": "node scripts/setup.js",
    "setup:github": "node scripts/setup-github.js",
    "docker:build": "docker build -t school-comm-system .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "pm2:status": "pm2 status"
  },
  "keywords": ["whatsapp", "school", "communication", "nepal", "education"],
  "author": "School Communication Team",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@prisma/client": "^7.3.0",
    "axios": "^1.6.0",
    "bullmq": "^5.4.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "pm2": "^5.3.0",
    "redis": "^4.6.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node-cron": "^3.0.11",
    "prisma": "^7.3.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
